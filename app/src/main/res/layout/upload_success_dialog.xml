<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/lblSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:text="Upload success"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtSuccessUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="User ID: "/>

    <TextView
        android:id="@+id/txtSuccessNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Record number: "/>

    <TextView
        android:id="@+id/txtSuccessName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:lines="3"
        android:maxLines="4"
        android:minLines="2"
        android:text="Record names: "/>

    <TextView
        android:id="@+id/txtSuccessMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Message: "/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancelSuccessDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:backgroundTint="@color/bg_color"
        android:text="Cancel"
        android:textAllCaps="false"
        app:cornerRadius="30dp"
        app:icon="@drawable/ic_baseline_cancel_24"
        app:iconGravity="textStart" />
</LinearLayout>