<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".TripManagement.Fragment.ListTripFragment">
    <include android:id="@+id/toolbarListTrip" layout="@layout/custom_toolbar"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_below="@id/toolbarListTrip"
        android:paddingHorizontal="20dp"
        android:paddingTop="20dp"
        android:backgroundTint="@color/bg_color_2"
        android:background="@drawable/view_rounded_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarListTrip">
        <CheckBox
            android:id="@+id/checkDeleteAll"
            android:layout_marginStart="0sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            style="@style/custom_checkbox"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtSearch"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnDeleteTrips"
            app:cornerRadius="30dp"
            android:textAllCaps="false"
            app:icon="@drawable/ic_baseline_delete_24"
            app:iconGravity="textStart"
            android:backgroundTint="@color/bg_color"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:iconPadding="0dp"
            android:layout_marginEnd="10sp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtSearch"
            app:layout_constraintRight_toRightOf="parent"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:cornerRadius="30dp"
            android:backgroundTint="@color/bg_color"
            android:textAllCaps="false"
            app:icon="@drawable/ic_baseline_cancel_24"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            android:textSize="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/txtSearch"
            app:layout_constraintRight_toLeftOf="@id/btnDeleteTrips"/>
        <SearchView
            android:id="@+id/txtSearch"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/view_rounded_30"
            android:queryHint="Search"
            />
        <TextView
            android:id="@+id/recordNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="List trip (5)"
            app:layout_constraintTop_toBottomOf="@id/checkDeleteAll"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/listItem"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listItem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recordNumber"/>
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="20dp"
            android:text="No data found" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            android:backgroundTint="@color/bg_color"
            android:src="@drawable/ic_baseline_menu_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnAddTrip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:clickable="true"
            android:src="@drawable/ic_baseline_add_item_24"
            android:backgroundTint="@color/bg_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnMenu"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnShowDeleteIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:clickable="true"
            android:src="@drawable/ic_baseline_remove_items_24"
            android:backgroundTint="@color/bg_color"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnAddTrip"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>